  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <!-- Form Name -->
      <legend>Reservation form</legend>

      <%= form_for(reservation, multipart: true, :html => {class: 'form-horizontal'}) do |f| %>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Email</label>
        <div class="col-sm-10">
          <%= f.text_field :email, :placeholder => "Email", :class => 'form-control' %>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Message</label>
        <div class="col-sm-10">
          <%= f.text_area :message, :placeholder => "Message", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Date</label>
        <div class="col-sm-10">
          <%= f.date_select :reserve_date, :placeholder => "Date", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Time</label>
        <div class="col-sm-10">
          <%= f.time_select :reserve_time, :ampm => true, :minute_step => 15, :class => 'form-control' %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="pull-right">
            <%= link_to "Cancel", :back, class: 'btn btn-default' %>
            <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
            <%= f.submit class: 'btn btn-primary' %>

          </div>
        </div>
      </div>

      <% end %>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->