<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <br><br>
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=640x260&sensor=false&zoom=16&markers=#{@restaurant.latitude}%2C#{@restaurant.longitude}",
    class: "tab-content",
     id: "map" %><br/>

     <h1><%= link_to 'Reserve', new_restaurant_reservation_path(@restaurant.id) %></h1>
     <h3>Name:</h3> <%= @restaurant.name %> <br>
     <h3>Description:</h3> <%= @restaurant.description %> <br>
     <h3>Address:</h3> <%= @restaurant.address %><br>
     <h3>City:</h3> <%= @restaurant.city %><br>
     <h3>State:</h3> <%= @restaurant.state %><br>
     <h3>Phone:</h3> <%= @restaurant.phone %><br>
     <h2><%= link_to 'Home', root_path %>
       <%= link_to 'Edit', edit_restaurant_path %>
       <%= link_to 'Delete', @restaurant , method: :delete %><br>
       <% if current_user %>
       <%= @restaurant.stars.count %>
        <% if @starred %>
        <%= link_to "Unstar", star_restaurant_path(@restaurant, type: "unstar"), method: :put %>
        <% else %>
        <%= link_to "Star", star_restaurant_path(@restaurant, type: "star"), method: :put %>
        <% end %>
       <% end %>

     </h2>
   </div>
   <%= render partial: 'reservations/form', :locals => { reservation: Reservation.new(restaurant_id: @restaurant.id) } %>
   <% if current_user.owner? %>
   <% @current_reservations.each do |reserve| %>
   <div class="row">
    <div class="col-md-4 col-md-offset-4">
     <h2><%= reserve.email %></h2>
     <%= link_to 'Destroy', { :controller => "reservations", :action => 'destroy', :id => reserve.id}, method: :delete %>

   </div>
 </div>
 <% end %>

 <% end %>
</div>
