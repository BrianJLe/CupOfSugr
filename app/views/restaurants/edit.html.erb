        <div class="row">
    <div class="col-md-4 col-md-offset-4">

            <legend>Edit Restaurant</legend>
      <!-- Form Name -->
       <%= form_for @restaurant, :html => {class: 'form-horizontal'} do |f| %>

    <!-- Text input-->
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Name</label>
        <div class="col-sm-10">
          <%= f.text_field :name, :placeholder => "Restaurant name", :class => 'form-control' %>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Description</label>
        <div class="col-sm-10">
          <%= f.text_area :description, :placeholder => "Short description", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Phone</label>
        <div class="col-sm-10">
          <%= f.text_field :phone, :placeholder => "Phone number", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Address</label>
        <div class="col-sm-10">
          <%= f.text_area :address, :placeholder => "Street address", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="pull-right">
            <%= link_to "Cancel", :back, class: 'btn btn-default' %>
            <%= f.submit "Update", class: 'btn btn-primary' %>
            
          </div>
        </div>
      </div>

      <% end %>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->