    <div class="container">
    <div class="row">
      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        
      <h1><b>Reserve</b>ster</h1>
          <% if user_signed_in? %>
          <h3><%= link_to 'Add new restaurant', new_restaurant_path %></h3>
          <% end %>
      <% if !@restaurants.nil? %>
      <% @restaurants.each do |res| %>
      <div class="well">
        <div class="media">
          <a class="pull-left" href="#">
            <%= image_tag res.image_url(:small_avatar), :width => 100, :height => 100 %>
          </a>
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to res.name, res %></h4>
               <p class="text-right"><%= res.address %></p>
               <p>Description: <%= res.description %></p>
          </div>
          </div>
          </div>
          <% end %>
          <% end %>
        </div></div></div>