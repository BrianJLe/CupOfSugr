  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <!-- Form Name -->
      <h2>Add a new restaurant</h2>

      <%= form_for(@restaurant, multipart: true, :html => {class: 'form-horizontal'}) do |f| %>
      <br>
      <% if @restaurant.errors.any? %>
      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Name</label>
        <div class="col-sm-10">
          <%= f.text_field :name, :placeholder => "Restaurant name", :class => 'form-control' %>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Description</label>
        <div class="col-sm-10">
          <%= f.text_area :description, :placeholder => "Short description", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Phone</label>
        <div class="col-sm-10">
          <%= f.text_field :phone, :placeholder => "XXX-XXX-XXXX", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Address</label>
        <div class="col-sm-10">
          <%= f.text_field :address, :placeholder => "Street Address", :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">City</label>
        <div class="col-sm-4">
          <%= f.text_field :city, :placeholder => "City Name", :class => 'form-control' %>
        </div>
        <label class="col-sm-2 control-label" for="textinput">State</label>
        <div class="col-sm-4">
          <%= f.text_field :state, :placeholder => "State", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput">Address</label>
        <div class="col-sm-10">
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="textinput"></label>
        <div class="col-sm-10">
          <%= f.label :remote_image_url, "or image URL" %><br />
          <%= f.text_field :remote_image_url %>
        </div>
      </div>

      <h3>Categories</h3>
      <% Category.all.each do |category| %>
      <%= check_box_tag "Category[category_ids][]", category.id %>
      <%= category.name %><br/>
      <% end %>
      <br>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="pull-right">
            <%= link_to "Cancel", :back, class: 'btn btn-default' %>
            <%= f.submit class: 'btn btn-primary' %>

          </div>
        </div>
      </div>

      <% end %>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->